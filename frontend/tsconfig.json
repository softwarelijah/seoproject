{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",

    /* --- key changes below --- */
    "moduleResolution": "node",        // reliable path-alias support in editors & build
    "baseUrl": ".",                    // project root
    "paths": {
      "@/*": ["./src/*"]               // "@/lib/utils" â†’ "src/lib/utils.ts"
    },
    /* -------------------------- */

    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/app/camera_analysis.tsx"  ],
  "exclude": ["node_modules"]
}
